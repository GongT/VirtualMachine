{
	$schema: "http://json-schema.org/draft-07/schema",
	required: [ "hostname" ],
	properties: {
		hostname: { type: "string" },
		mount: {
			type: "array",
			items: {
				type: "object",
				required: [ "type", "destination" ],
				properties: {
					type: {
						type: "string",
						enum: [ "root", "share", "log", "data", "config", "socket", "source", "volume", "tmpfs" ]
					},
					host: { type: "string" },
					destination: { type: "string" },
					options: {
						type: "array",
						items: { type: "string", enum: [ "readonly" ] }
					}
				}
			}
		},
		network: {
			type: "object",
			properties: {
				type: {
					type: "string",
					enum: [ "disable", "hostonly", "bridge" ]
				},
				br: {
					type: "string"
				}
			}
		},
		install: {
			properties: {
				packages: { type: "array", items: { type: "string" } },
				packagesFile: { type: "string" },
				initialConfigFiles: { type: "array", items: { type: "string" } },
				copyFiles: {
					type: "object",
					additionalProperties: { type: "string" }
				},
				inject: {
					type: "array",
					items: {
						type: "string",
						enum: [ "ssh-key", "dnf" ]
					}
				},
				service: {
					type: "object",
					additionalProperties: {
						type: "object",
						properties: {
							enabled: {
								type: [ "boolean", "array" ],
								items: { type: "string" }
							},
							template: { type: "string" },
							overwrite: { type: "string" }
						}
					}
				}
			}
		},
		download: {
			type: "array",
			items: {
				type: "object",
				required: [ "url", "saveAs" ],
				properties: {
					type: { type: "string", enum: [ "normal", "git", "github" ] },
					url: { type: "string" },
					saveAs: { type: "string" }
				}
			}
		},
		compile: {
			type: "array",
			items: {
				type: "object",
				required: [ "title", "script", "artifacts" ],
				properties: {
					title: { type: "string" },
					script: { type: "string" },
					artifacts: { type: "string" },
					requirements: { type: "array", items: { type: "string" } }
				}
			}
		},
		environment: {
			type: "object",
			additionalProperties: { type: "string" }
		},
		postscript: { type: "string" }
	}
}