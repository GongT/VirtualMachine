{
	$schema: "http://schemas.service.gongt.me/virtual-machine-installer.json",
	hostname: "source-code-build-environment",
	network: {
		type: "bridge"
	},
	mount: [
		{
			type: "source",
			host: ".",
			destination: "/data/DevelopmentRoot"
		}
	],
	bind: {
		cache: [
			"Download"
		]
	},
	install: {
		packagesFile: "common-tools.lst",
		inject: [ ]
	},
	environment: {
		PROXY: "*pass"
	},
	postscript: "post-install.sh"
}