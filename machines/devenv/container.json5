{
	$schema: "http://schemas.service.gongt.me/virtual-machine-installer.json",
	hostname: "DevelopmentEnvironment",
	mounts: [
		{
			type: "root",
			destination: "/data"
		},
		{
			type: "root",
			destination: "/dev/shm"
		},
		{
			type: "root",
			destination: "/dev/dri"
		}
	],
	network: {
		type: "bridge"
	},
	install: {
		packages: [
			"git",
			"vim",
			"nmap-ncat",
			"tar",
			"xz",
			"gzip",
			"git",
			"hostname",
			"libXext",
			"findutils",
			"libXrender",
			"libXtst",
			"freetype",
			"wqy-*",
			"rsync",
			"procps-ng"
		],
		inject: [ "dnf" ],
		service: {
			"sshd.socket": {
				enabled: true,
				overwrite: "sshd-overwrite.socket"
			}
		}
	},
	download: [
		{
			type: "github",
			url: "GongT/jetbrains-bootstrap-scripts",
			saveAs: "/opt/JetBrains"
		},
		{
			type: "github",
			url: "GongT/simple-settings-repository",
			saveAs: "/opt/JetBrains/DATA/PhpStorm/simple-settings-repository"
		},
		{
			type: "github",
			url: "GongT/idea-settings",
			saveAs: "/opt/JetBrains/DATA/PhpStorm/simple-settings-repository/repo",
		},
	]
}